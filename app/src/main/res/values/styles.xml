<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->

    <style name="Theme.Daily.AppTheme.Light" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarBackground">@color/ab_background_light</item>
        <item name="homeListHeaderItemBackground">@color/home_list_header_bg_light</item>
        <item name="listItemBackground">@drawable/card_light</item>
        <item name="listItemDefaultImage">@drawable/image_small_default</item>
        <item name="listItemExtraBackground">@drawable/list_item_extra_light</item>
        <item name="listItemExtraDividerColor">@color/list_item_extra_divider_dark</item>
        <item name="listItemExtraTextColor">@color/list_item_extra_dark</item>
        <item name="listItemHeaderBackground">@color/list_item_bg_light_normal</item>
        <item name="listItemIntroTextColor">@color/list_item_intro_light</item>
        <item name="listItemTextNorColor">@color/black</item>
        <item name="listItemTextReadColor">@color/list_item_intro_light</item>
        <item name="listItemDateTextColor">@color/list_item_date_light</item>
        <item name="listViewBackground">@color/list_view_bg_light</item>
        <item name="navigationDivider">@color/navigation_divider_light</item>
        <item name="newsToolbar">@drawable/news_toolbar_light</item>
        <item name="newsToolbarThemeNameColor">@color/news_tool_bar_theme_name_color_light</item>
        <item name="webViewBackground">@color/webview_light</item>
    </style>

    <style name="Theme.Daily.AppTheme.Dark" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarBackground">@drawable/abc_ab_solid_dark_holo</item>
        <item name="homeListHeaderItemBackground">@color/home_list_header_bg_dark</item>
        <item name="listItemBackground">@drawable/card_dark</item>
        <item name="listItemDefaultImage">@drawable/dark_image_small_default</item>
        <item name="listItemExtraBackground">@drawable/list_item_extra_dark</item>
        <item name="listItemExtraDividerColor">@color/list_item_extra_divider_dark</item>
        <item name="listItemExtraTextColor">@color/list_item_extra_dark</item>
        <item name="listItemHeaderBackground">@color/list_item_bg_dark_normal</item>
        <item name="listItemIntroTextColor">@color/list_item_intro_dark</item>
        <item name="listItemTextNorColor">@color/list_item_title_dark</item>
        <item name="listItemTextReadColor">@color/list_item_intro_dark</item>
        <item name="listItemDateTextColor">@color/list_item_date_dark</item>
        <item name="listViewBackground">@color/list_view_bg_dark</item>
        <item name="navigationDivider">@color/navigation_divider_dark</item>
        <item name="newsToolbar">@drawable/news_toolbar_dark</item>
        <item name="newsToolbarThemeNameColor">@color/news_tool_bar_theme_name_color_dark</item>
        <item name="webViewBackground">@color/webview_dark</item>
    </style>
</resources>